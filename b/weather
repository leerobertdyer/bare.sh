#!/usr/bin/env bash
source "$(dirname "${BASH_SOURCE[0]}")/../lib/init"

doc=$(cat <<'EOF'

# weather

Get the current weather for a location

`[:location] today`		| Get today's weather
`[:location] forecast` 	| Get a three-day forecast

> weather today		| Get today's weather
> weather forecast	| Get a three-day forecast

EOF
) && export doc && b/inspect "$@"

[[ $1 == 'clear' ]] && rm "$BARE_DIR"/tmp/weather.* && exit 0

command="today"
color="C"

while (( "$#" )); do
	case "$1" in
		-T)
			color="T"
			shift
			;;
		today|forecast)
			location="$2"
			command="$1"
			shift 2
			;;
		-J)
			command="json"
			shift
			;;
		*)
			location="$1"
			shift
			;;
	esac
done

location=$(b/geo "$location")

[[ $command == 'json' ]] && params="$location?format=j1"
# [[ $command == 'basic' ]] && params="$location?uQF$color&format=%c+%m+%t"
[[ $command == 'today' ]] && params="$location?u0QF$color"
[[ $command == 'forecast' ]] && params="$location?u3QF$color"

curl -sL "wttr.in/$params"