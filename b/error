#!/usr/bin/env bash
source "$(dirname "${BASH_SOURCE[0]}")/../lib/init"

# ================================== DOC ===================================
declare doc_name="error"
declare doc_description="Print an error message and exit with status code 1"
declare -a doc_options=(
	":code"		"The error code"
	":message"	"The error message"
) && [[ "$1" == '--inspect' ]] && return 0

[[ $2 == '--inspect' ]] && unset doc_options && return 0

printf "\n‚ùå ${red}$1${reset}: $2\n\n" && exit 1