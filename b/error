#!/usr/bin/env bash
source "$(dirname "${BASH_SOURCE[0]}")/../lib/init"

doc="$(cat <<'EOF'

# error

Print an error message and exit with status code 1

`<:code>`		| The error code
`<:message>`	| The error message

> error 999 "An unexpected error occurred" | Print an error message and exit with status code 999

EOF
)" && inspect "$doc" "$1"
# =============================================================================



printf "\n‚ùå ${red}$1${reset}: $2\n\n" && exit 1