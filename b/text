#!/usr/bin/env bash
# Text manipulation, uppercasing, lowercasing, etc.
source "$(dirname "${BASH_SOURCE[0]}")/../lib/init"

# set up documentation as an array
declare -a documentation=(
	"title"			"text"
	"description"	"Text manipulation, uppercasing, lowercasing, etc."
	"lowercase"		"lowercase given text"
	"uppercase"		"UPPERCASE given text"
	"capitalize" 	"Capitalize given text"
) && export documentation

[[ "$1" == "--help" ]] && b/usage -t "commands" -w 12 $0 "${documentation[@]}"

