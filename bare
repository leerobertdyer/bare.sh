#!/usr/bin/env bash
set +H
source "$(dirname "${BASH_SOURCE[0]}")/lib/init"

doc="$(cat <<'EOF'
# bare

The bare interface

`:scope`	| * The scope to activate (e.g. `b/openai`)

> b/bare :scope [args]	| Activate a scope with arguments

EOF
)" && export doc && inspect "$1"

[[ -z $1 ]] && echo "No scope specified" && exit 1

[[ -e "b/$1" ]] && {
	scope="$1" && shift
	"b/$scope" "$@"
	exit 0
}

echo "$@"